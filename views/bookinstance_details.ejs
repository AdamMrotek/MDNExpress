<!DOCTYPE html>
<html>
  </body> 
    <%- include('./partials/head') %>
    <div class="main-content">
      <%- include('./partials/nav') %>
      <div class="row">
          <div class="col-sm-10">
            <h1>ID: <%= id %> </h1>
            <% if(bookinstance){%>          
           
              <p>Title:<%= bookinstance.book.title %></p>
              <p>Imprint<%= bookinstance.imprint %></p>
              <% if(bookinstance.status==="Available"){ %> 
                <span class="text-success"><%= bookinstance.status%></span>
              <% } else if(bookinstance.status==="Maintenance"){ %> 
                <span class="text-danger"><%= bookinstance.status%></span>
              <% }else{ %> 
                <span class="text-warning"><%= bookinstance.status%></span>
              <% }%>
              <% if(bookinstance.status!=="Available"){ %> 
            
                <span> (Due: <%=bookinstance.formatted_due_back%>)</span>
              <% }%> 


              <form action="" method="post">
                <div class="form-group">
                  <input type="hidden" id="bookInstanceId" class="form-control" type='hidden' name='bookInstanceId' required='true' value='<%=bookinstance._id%>' >
                  <input type="hidden" id="bookId" class="form-control" type='hidden' name='bookid' required='true' value='<%=bookinstance.book._id%>' >
                  <button class="btn btn-primary" type='submit'>Delete</button>
                </div>
              </form>
                
            <% } else {%>
              <p>Instance not Found</p>
             <% } %> 
          </div>
</div>
</div> 
</body>
</html>