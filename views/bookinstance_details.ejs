<!DOCTYPE html>
<html>
  </body> 
    <%- include('./partials/head') %>
    <div class="container-fluid">
      <div class="row">
        <%- include('./partials/nav') %>
          <div class="col-sm-10">
            <h1>ID: <%= id %> </h1>
            <% if(bookinstance){%>          
           
              <p>Title:<%= bookinstance.book.title %></p>
              <p>Imprint<%= bookinstance.imprint %></p>
              <% if(bookinstance.status==="Available"){ %> 
                <span class="text-success"><%= bookinstance.status%></span>
              <% } else if(bookinstance.status==="Maintenance"){ %> 
                <span class="text-danger"><%= bookinstance.status%></span>
              <% }else{ %> 
                <span class="text-warning"><%= bookinstance.status%></span>
              <% }%>
              <% if(bookinstance.status!=="Available"){ %> 
                <span> (Due: <%=bookinstance.formatted_due_back%>)</span>
              <% }%> 
              
             
                
        
          
            <% } else {%>
              <p>Instance not Found</p>
             <% } %> 
          </div>
</div>
</div> 
</body>
</html>