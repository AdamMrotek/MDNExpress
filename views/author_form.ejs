<!DOCTYPE html>
<html>
  </body> 
    <%- include('./partials/head') %>
    <div class="container-fluid">
      <div class="row">
        <%- include('./partials/nav') %>
          <div class="col-sm-10">

            <h1><%=title%></h1>
              <form method="POST" action="">

                <div class="form-group">
                  <label for="first_name">First Name: </label>
                  <input type="text" name="first_name" id="first_name" class="form-control" placeholder='First name (Christian)' required='true' value= '<%= typeof author=="undefined"?"": author.first_name%>' >

                  <label for="family_name">Family Name: </label>
                  <input type="text" name="family_name" id="family_name" class="form-control" placeholder='Family name (surname)' required='true' value= '<%= typeof author=="undefined"?"": author.family_name%>' >
                </div>

                <div class="form-group">
                  <label for="date_of_birth">Date of birth: </label>
                  <input type="date" name="date_of_birth" id="date_of_birth" class="form-control"  value=" <%= typeof author=="undefined"?"": author.date_of_birth%>" >
                 
                  <label for="date_of_death">Date of death: </label>
                  <input type="date" name="date_of_death" id="date_of_death" class="form-control"  value= '<%= typeof author=="undefined"?"": author.date_of_death%>' >
                </div>

                <button class="btn btn-primary" type="submit">Submit</button>
              </form>

              <% if(typeof errors !=="undefined"){%>
                <ul>
                  <% errors.forEach(error => {%> 
                    <li><%= error.msg %> </li>
                  <%})%> 
                </ul>
              <%}%> 
          </div>
      </div>
    </div> 
  </body>
</html>